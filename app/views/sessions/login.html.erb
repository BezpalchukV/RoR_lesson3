<body>
<h1>Login</h1>
<div class="box _login">
    <%= form_tag('/sessions', method: :post) do %>
      <div class="boxBody">
        <div class="field">
          <%= label_tag :email %>
          <%= email_field_tag :email %>
        </div>
        <div class="field">
          <%= label_tag :password %>
          <%= password_field_tag :password %>
        </div>
      </div>
        <div class="actions" id="btnLogin">
          <%= submit_tag 'Login' %>
        </div>
    <% end %>
    </div>
</body>